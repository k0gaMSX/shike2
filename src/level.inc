
NR_MAPS		EQU	512
NR_HEIGHTS	EQU	3
NR_LEVELS	EQU	15
NR_DOORS	EQU	16
NR_CHARS	EQU	20
NR_CHARCTL	EQU	2

LVLXSIZ		EQU	8
LVLYSIZ		EQU	8
ROOMXSIZ	EQU	8
ROOMYSIZ	EQU	8
MAPXSIZ		EQU	8
MAPYSIZ		EQU	8
TILEXSIZ	EQU	2
TILEYSIZ	EQU	7
FLOORXSIZ	EQU	1
FLOORYSIZ	EQU	2
NOHEIGHT	EQU	80H

SIZLVLNAME	EQU	20
SIZAMATRIX	EQU	LVLXSIZ*LVLYSIZ
SIZRMATRIX	EQU	ROOMXSIZ*ROOMYSIZ*2
SIZHMATRIX	EQU	MAPXSIZ*MAPYSIZ
TILE.HEIGHT	EQU	TILEYSIZ*TILEXSIZ
TILE.SIZ	EQU	TILE.HEIGHT+1
FLOOR.SIZ	EQU	4

LVL.NAME	EQU	0
LVL.PAL		EQU	LVL.NAME+SIZLVLNAME
LVL.GFX		EQU	LVL.PAL+1
LVL.HEIGHT1	EQU	LVL.GFX+1
LVL.HEIGHT2	EQU	LVL.HEIGHT1+SIZRMATRIX
LVL.HEIGHT3	EQU	LVL.HEIGHT2+SIZRMATRIX
LVL.ACCESS	EQU	LVL.HEIGHT3+SIZRMATRIX
SIZLEVEL	EQU	LVL.ACCESS+SIZAMATRIX

RINFO.ROOM	EQU	0		;ROOM COORDENATES
RINFO.YR	EQU	RINFO.ROOM+2	;RENDER Y COORDENATE
RINFO.XR	EQU	RINFO.YR+2	;RENDER X COORDENATE
RINFO.INC	EQU	RINFO.XR+2	;INCREMENT. USED IN RINFO CALCULATION
RINFO.HMATRIX	EQU	RINFO.INC+2	;HEIGHT MATRIX, ONE PER LEVEL
SIZRINFO	EQU	RINFO.HMATRIX+NR_HEIGHTS*SIZHMATRIX

DINFO.LEVEL	EQU	0		;DOOR INITIAL LEVEL
DINFO.ROOM	EQU	DINFO.LEVEL+2	;DOOR INITIAL ROOM
DINFO.Y		EQU	DINFO.ROOM+2	;DOOR INITIAL Y
DINFO.X		EQU	DINFO.Y+1	;DOOR INITIAL X
DINFO.Z		EQU	DINFO.X+1	;DOOR INITIAL Z
DINFO.TYPE	EQU	DINFO.Z+1	;DOOR TYPE
DINFO.KEY	EQU	DINFO.TYPE+1	;WHICH KEY OPENS THIS DOOR
DINFO.STAT	EQU	DINFO.KEY+1	;DOOR INITIAL STATE
SIZDINFO	EQU	DINFO.STAT+1

CINFO.LEVEL	EQU	0
CINFO.ROOM	EQU	CINFO.LEVEL+2
CINFO.Y		EQU	CINFO.ROOM+2
CINFO.X		EQU	CINFO.Y+1
CINFO.Z		EQU	CINFO.X+1
CINFO.PAT	EQU	CINFO.Z+1
CINFO.CONTROL	EQU	CINFO.PAT+1
CINFO.DIR	EQU	CINFO.CONTROL+1
SIZCINFO	EQU	CINFO.DIR+1


CENTRAL.P1X	EQU	7
CENTRAL.P1Y	EQU	4
MAP.CENTRAL	EQU	CENTRAL.P1X*256 + CENTRAL.P1Y

