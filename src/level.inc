
NR_LAYERS	EQU	2
NR_MAPS		EQU	512
NR_HEIGHTS	EQU	3
NR_LEVELS	EQU	15
STEPHEIGHT	EQU	4

LVLXSIZ		EQU	8
LVLYSIZ		EQU	8
ROOMXSIZ	EQU	8
ROOMYSIZ	EQU	8
MAPXSIZ		EQU	8
MAPYSIZ		EQU	8
TILEXSIZ	EQU	2
TILEYSIZ	EQU	7
FLOORXSIZ	EQU	1
FLOORYSIZ	EQU	2

SIZLVLNAME	EQU	20
SIZAMATRIX	EQU	LVLXSIZ*LVLYSIZ
SIZRMATRIX	EQU	ROOMXSIZ*ROOMYSIZ*2
SIZHMATRIX	EQU	MAPXSIZ*MAPYSIZ
TILE.SIZ	EQU	TILEYSIZ*TILEXSIZ
FLOOR.SIZ	EQU	4

LVL.NAME	EQU	0
LVL.PAL		EQU	LVL.NAME+SIZLVLNAME
LVL.GFX		EQU	LVL.PAL+1
LVL.HEIGHT1	EQU	LVL.GFX+1
LVL.HEIGHT2	EQU	LVL.HEIGHT1+SIZRMATRIX
LVL.HEIGHT3	EQU	LVL.HEIGHT2+SIZRMATRIX
LVL.ACCESS	EQU	LVL.HEIGHT3+SIZRMATRIX
SIZLEVEL	EQU	LVL.ACCESS+SIZAMATRIX

RINFO.ROOM	EQU	0		;ROOM COORDENATES
RINFO.YR	EQU	RINFO.ROOM+2	;RENDER Y COORDENATE
RINFO.XR	EQU	RINFO.YR+2	;RENDER X COORDENATE
RINFO.INC	EQU	RINFO.XR+2	;INCREMENT. USED IN RINFO CALCULATION
RINFO.HMATRIX	EQU	RINFO.INC+2	;HEIGHT MATRIX, ONE PER LEVEL
SIZRINFO	EQU	RINFO.HMATRIX+NR_HEIGHTS*SIZHMATRIX

CENTRAL.P1X	EQU	7
CENTRAL.P1Y	EQU	4
MAP.CENTRAL	EQU	CENTRAL.P1X*256 + CENTRAL.P1Y

GETPAL		EQU	CARTSEG
GETLEVEL	EQU	GETPAL+3
GETROOM		EQU	GETLEVEL+3
GETFONT		EQU	GETROOM+3

