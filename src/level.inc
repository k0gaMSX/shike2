
NR_LAYERS	EQU	3
NR_FLOORS	EQU	40
NR_TILES	EQU	255
NR_MAPS		EQU	512
NR_HEIGHTS	EQU	3
NR_LEVELS	EQU	15

LVLXSIZ		EQU	8
LVLYSIZ		EQU	8
TILEXSIZ	EQU	1
TILEYSIZ	EQU	6
FLOORXSIZ	EQU	1
FLOORYSIZ	EQU	2

SIZFLOOR	EQU	FLOORXSIZ*FLOORYSIZ*NR_LAYERS
SIZMTILE	EQU	TILEXSIZ*TILEYSIZ*NR_LAYERS
SIZLVLNAME	EQU	20
SIZAMATRIX	EQU	LVLXSIZ*LVLYSIZ
SIZRMATRIX	EQU	LVLXSIZ*LVLYSIZ*2

TILE.HEIGHT	EQU	0
TILE.MAP	EQU	TILE.HEIGHT+2
SIZTILE		EQU	TILE.MAP+SIZMTILE

LVL.NAME	EQU	0
LVL.PAL		EQU	LVL.NAME+SIZLVLNAME
LVL.GFX		EQU	LVL.PAL+1
LVL.HEIGHT1	EQU	LVL.GFX+1
LVL.HEIGHT2	EQU	LVL.HEIGHT1+SIZRMATRIX
LVL.HEIGHT3	EQU	LVL.HEIGHT2+SIZRMATRIX
LVL.ACCESS	EQU	LVL.HEIGHT3+SIZRMATRIX
SIZLEVEL	EQU	LVL.ACCESS+SIZAMATRIX


GETFLOOR	EQU	CARTSEG
GETTILE		EQU	GETFLOOR+3
GETPAL		EQU	GETTILE+3
GETLEVEL	EQU	GETPAL+3
GETROOM		EQU	GETLEVEL+3

