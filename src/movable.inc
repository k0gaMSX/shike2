


MOV.STATE	EQU	0			;MOVABLE STATUS
MOV.POINT	EQU	1			;CHARACTER LOCATION
MOV.RINFO	EQU	MOV.POINT+POINT.SIZ	;INFO ABOUT THE ROOM OF POINT
MOV.YR		EQU	MOV.RINFO+2		;Y RENDER COORDENATE
MOV.XR		EQU	MOV.YR+2		;X RENDER COORDENATE
MOV.DIR		EQU	MOV.XR+2		;DIRECTION OF THE CHARACTER
MOV.DIRSTEP	EQU	MOV.DIR+1		;DIRECTION OF NEXT STEP
MOV.STEPCNT	EQU	MOV.DIRSTEP+1		;COUNTER USED FOR ANIMATIONS
MOV.MOB		EQU	MOV.STEPCNT+1		;ACTUAL MOB USED
MOV.PAT		EQU	MOV.MOB+1		;PATTERN OF THE CHARACTER
MOV.SIZ		EQU	MOV.PAT+1

